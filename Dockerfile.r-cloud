# Claude Code Sandbox - R + Multi-Cloud CLI Variant
# R ecosystem + AWS, Azure, and GCP tools
FROM claude-sandbox-r

# Switch to root for installations
USER root

RUN apt-get update -qq && apt-get install -y --no-install-recommends \
    google-cloud-cli azure-cli && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Install AWS CLI v2 -- no official apt repo
RUN curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "/tmp/awscliv2.zip" && \
    unzip /tmp/awscliv2.zip -d /tmp && \
    /tmp/aws/install && \
    rm -rf /tmp/awscliv2.zip /tmp/aws

# Don't set USER here - entrypoint.sh handles user switching
WORKDIR /workspace
